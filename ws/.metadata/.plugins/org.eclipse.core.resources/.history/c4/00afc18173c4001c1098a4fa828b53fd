package com.kh.swy;

import java.util.Scanner;

public class Test {

		public void count() {
			Scanner sc = new Scanner(System.in);
			
			while(true) {
				System.out.println("문자열을 입");
				String str = sc.nextLine();
				if(str.equals("exit")) {
					break;
				} else {
					System.out.println(str.length());
				}
			}
		
			System.out.println("프로그램을 종료");
		}

		public static void main(String[] args) {
		
		
				Scanner sc = new Scanner(System.in);
				
				while(true) {
					System.out.println("문자열을 입");
					String str = sc.nextLine();
					if(str == "exit") {
						break;
					} else {
						System.out.println("");
					}
				}
			
				System.out.println("프로그램을 종료");
	}


